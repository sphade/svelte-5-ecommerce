{
  "name": "my-ecommerce-app",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "pnpm run build && wrangler dev",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint .",
    "db:push": "drizzle-kit push --config=drizzle-dev.config.ts",
    "db:push:prod": "drizzle-kit push",
    "db:migrate:prod": "drizzle-kit migrate",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate --config=drizzle-dev.config.ts",
    "db:studio:prod": "drizzle-kit studio",
    "db:studio": "drizzle-kit studio --config=drizzle-dev.config.ts",
    "deploy": "pnpm run build && wrangler deploy",
    "cf-typegen": "wrangler types && move worker-configuration.d.ts src/"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241022.0",
    "@sveltejs/adapter-auto": "^3.0.0",
    "@sveltejs/adapter-cloudflare": "^4.7.4",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "@types/better-sqlite3": "^7.6.11",
    "@types/eslint": "^9.6.0",
    "autoprefixer": "^10.4.20",
    "bits-ui": "1.0.0-next.52",
    "clsx": "^2.1.1",
    "drizzle-kit": "^0.22.0",
    "embla-carousel-svelte": "^8.3.1",
    "eslint": "^9.7.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.36.0",
    "formsnap": "2.0.0-next.1",
    "globals": "^15.0.0",
    "lucide-svelte": "^0.454.0",
    "mode-watcher": "^0.4.1",
    "prettier": "^3.3.2",
    "prettier-plugin-svelte": "^3.2.6",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "svelte-sonner": "^0.3.28",
    "sveltekit-superforms": "^2.20.0",
    "tailwind-merge": "^2.5.4",
    "tailwind-variants": "^0.2.1",
    "tailwindcss": "^3.4.9",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.0.0",
    "vite": "^5.0.3",
    "wrangler": "^3.84.1",
    "zod": "^3.23.8"
  },
  "dependencies": {
    "@oslojs/crypto": "^1.0.1",
    "@oslojs/encoding": "^1.1.0",
    "@types/nprogress": "^0.2.3",
    "better-auth": "1.0.0-canary.3",
    "drizzle-orm": "^0.33.0",
    "embla-carousel-autoplay": "^8.3.1",
    "embla-carousel-fade": "^8.3.1",
    "nprogress": "^0.2.0",
    "svelte-confetti": "^2.1.2",
    "sveltekit-search-params": "^3.0.0"
  }
}